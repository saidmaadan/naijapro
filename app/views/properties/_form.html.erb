<div class="property">
    <section class="section project property__new">
        <div class="container">
            <div class="form-container">
                <p class="title is-4 has-text-centered">What Services Are You Looking For?</p>

                <%= form_for @property do |f| %>
                    <div class="field">
                        <label class="label">Title (*)</label>
                        <%= f.text_field :title, placeholder: "Title...", class: "input" %>
                    </div>
                    <div class="field">
                        <label for="" class="label">Description</label>
                        <%= f.text_area :summary, autocomplete: "description", class: "textarea" %>               
                    </div>


                    
                    
                    
                

                    <div class="field has-text-centered">
                        <%= f.submit 'Post project', class: "button is-primary" %>
                    </div>
                
                <% end %>
            </div>
        </div>
    </section>
</div>